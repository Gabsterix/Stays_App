<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Property_DetailFragment"
    android:padding="10dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/propertyImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvPropertyName"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:text="Property Name"
                android:textSize="18sp"
                android:padding="8dp"
                android:layout_weight="2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivStar_Ratings"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_star"/>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:padding="8dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvMileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mileage"
                android:padding="8dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:padding="8dp"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:padding="8dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:padding="8dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivWashroom"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/baseline_shower"/>

                <TextView
                    android:id="@+id/tvBathFacility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shower/Toilet Facility"
                    android:padding="8dp"/>


            </LinearLayout>


        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/tvToilet_facility"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Toilet Facility"-->
<!--            android:padding="8dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/tvCheck_in_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check-in Date"
                    android:padding="8dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnCheck_in"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="JAN 01 2023"
                    android:textSize="25sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvCheckout_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Checkout Date"
                    android:padding="8dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnCheck_out"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="AUG 11 2023"
                    android:textSize="25sp"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>





        <Button
            android:id="@+id/button_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:padding="16dp"/>
    </LinearLayout>




</FrameLayout>