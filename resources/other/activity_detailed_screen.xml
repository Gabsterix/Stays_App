<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <!--        Image Section       -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Image of property"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAddressLine"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Address line 1,"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvAddressLine2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Address line 2"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- First ImageView for stars -->
            <ImageView
                android:id="@+id/imageViewRating1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/baseline_star" />

            <!-- Second ImageView for stars -->
            <ImageView
                android:id="@+id/imageViewRating2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/baseline_star" />

            <ImageView
                android:id="@+id/imageViewRating3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/baseline_star" />

            <ImageView
                android:id="@+id/imageViewRating4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/baseline_star" />

            <ImageView
                android:id="@+id/imageViewRating5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/baseline_star" />

            <!-- TextView for the rating -->
            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="5.0"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Check In -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check In"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon 22 May"
                    android:textColor="#0A66C2"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:padding="0dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <!-- Check Out -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Out"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"

                    android:padding="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue 23 May"
                    android:textColor="#0A66C2"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:padding="0dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Rooms and Guests Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rooms and Guests"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:padding="0dp" />

            <!-- Room Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 1 room -->
                <TextView
                    android:id="@+id/tvRoomCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 room"
                    android:textSize="14sp"
                    android:textColor="#0A66C2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:padding="0dp" />

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <!-- 2 adults -->
                <TextView
                    android:id="@+id/tvAdultCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 adults"
                    android:textSize="14sp"
                    android:textColor="#0A66C2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="0dp" />

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <!-- No children -->
                <TextView
                    android:id="@+id/tvChildrenCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No children"
                    android:textSize="14sp"
                    android:textColor="#0A66C2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="0dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Price for one night and Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Price for one night and Date -->
                    <TextView
                        android:id="@+id/tvPriceDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Price for one night (22 May - 23 May)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:padding="0dp" />

                </LinearLayout>

                <!-- Price value -->
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="£76"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="0dp" />

                <!-- Includes taxes and charges -->
                <TextView
                    android:id="@+id/tvIncludesTaxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Includes taxes and charges"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:layout_marginLeft="10dp"
                    android:padding="0dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Image of maps"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewPlaceholder"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_primary_button"
                    android:paddingLeft="125dp"
                    android:paddingTop="12dp"
                    android:paddingRight="125dp"
                    android:paddingBottom="12dp"
                    android:text="Book Now" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>